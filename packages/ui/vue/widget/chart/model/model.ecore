            <details key="documentation" value="Configuration for individual data series/datasets"/>
        </eAnnotations>

        <!-- Series Identifier -->
        <eStructuralFeatures xsi:type="ecore:EReference" name="seriesIndex" containment="false" defaultValueLiteral="0">
